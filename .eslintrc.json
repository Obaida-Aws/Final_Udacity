{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "globals": {
    "module": "readonly",
    "define": "readonly",
    "__globalThis": "readonly"
  },
  "ignorePatterns": ["dist/"]
}
